{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "lib": [
      "esnext"
    ],
    "strict": true,
    "composite": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
